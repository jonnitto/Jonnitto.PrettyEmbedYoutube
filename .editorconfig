# http://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing-whitespace = true
indent_style = tab

[*.php]
indent_style = space
indent_size = 4

[*.fusion]
indent_style = space
indent_size = 4

[*.{json,jscsrc}]
indent_style = space
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 2

[composer.*]
indent_style = space
indent_size = 4

[Sites.xml]
indent_style = space
indent_size = 1

[*.{note,md,edit,read}]
trim_trailing-whitespace = false
